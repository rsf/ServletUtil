    <ponderutilcore.version>1.2.2M5-SNAPSHOT</ponderutilcore.version>
    <jservletutil.version>1.2.2M5-SNAPSHOT</jservletutil.version>
  </properties>
  <version>${jservletutil.version}</version>
  <description>
    Libraries for abstracting over servlet dispatch, Spring utilities including
    fast request scope container (aka RSAC)
  </description>
  <inceptionYear>2005</inceptionYear>
  <packaging>jar</packaging>
  <mailingLists>
